{
  "name": "@repo/database",
  "version": "1.0.0",
  "exports": {
    ".": "./src/client.ts"
  },
  "scripts": {
    "db:migrate:deploy": "./migrations-apply.sh && wrangler d1 migrations apply cmail --remote",
    "db:migrate:dev": "prisma migrate dev && ./migrations-apply.sh && wrangler d1 migrations apply cmail --local -c ../../apps/web/wrangler.toml",
    "db:push": "prisma db push",
    "db:seed": "tsx src/seed.ts",
    "dev": "tsup src/* --watch",
    "format": "prisma format",
    "generate": "prisma generate",
    "lint": "eslint . --max-warnings 0",
    "prebuild": "npm run generate",
    "predev": "npm run generate",
    "studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "@prisma/adapter-d1": "^5.18.0",
    "@cloudflare/next-on-pages":  "^1.13.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "prisma": "^5.16.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "@types/node": "^18.19.45"
  }
}
